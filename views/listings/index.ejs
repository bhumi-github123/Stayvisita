<% layout("/layouts/boilerplate") %> 

<body>
    <h3>ALL LISTINGS</h3>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="row">
        <% for(let listing of allListings) { %>
        <div class="col-md-4 col-sm-6 mb-4">
            <a href="/listings/<%= listing._id %>" style="text-decoration: none;">
                <div class="card position-relative listing-card">
                    <img src="<%= listing.image?.url || '/default-image.jpg' %>" class="card-img-top" alt="<%= listing.title %>" style="height: 10rem; object-fit: cover;">
                    <div class="image-overlay"></div>
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text"><%= listing.description %></p>
                        <p class="card-text"><strong>Price:</strong> &#8377; <%= listing.price?.toLocaleString("en-IN") || 'N/A' %></p>
                        <p class="card-text"><strong>Location:</strong> <%= listing.location || 'N/A' %>, <%= listing.country || 'N/A' %></p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>  
</body>
