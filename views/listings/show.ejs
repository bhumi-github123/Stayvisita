<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3>Listing Details:</h3>
  </div>

  <div class="card col-6 offset-3 show-card">
    <img src="<%= listing.image?.url || '/default-image.jpg' %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %></b><br>
        <%= listing.description %><br>
        <strong>Price:</strong> &#8377; <%= listing.price?.toLocaleString("en-IN") || 'N/A' %> <br>
        <strong>Location:</strong> <%= listing.location || 'N/A' %> <br>
        <strong>Country:</strong> <%= listing.country || 'N/A' %> <br>
      </p>
    </div>
  </div>

  <div class="col-6 offset-2 mt-3">
    <div class="btns d-flex gap-2">
      <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn offset-3">Edit</a>

      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
        <button class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>
  </div>
</div>
